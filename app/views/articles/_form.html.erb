<br>
<div style="text-align: center">
<%= form_for(@article) do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :picture %>
    <%= f.file_field :picture %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
</div>